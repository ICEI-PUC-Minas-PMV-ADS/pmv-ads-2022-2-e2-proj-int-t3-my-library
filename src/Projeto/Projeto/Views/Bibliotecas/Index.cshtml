@model IEnumerable<Projeto.Models.Biblioteca>

@{
    ViewData["Title"] = "Index";
}

<style>
    main{
        width: 100%;
        background-color: #C8C8C8;
    }
    h1{
        width: 100%;
        text-align: center;
        background-color: #5B9898;
        color: white;
        padding: 20px;
    }
</style>

<h1>Bibliotecas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Nome
            </th>
            <th>
                Páginas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
