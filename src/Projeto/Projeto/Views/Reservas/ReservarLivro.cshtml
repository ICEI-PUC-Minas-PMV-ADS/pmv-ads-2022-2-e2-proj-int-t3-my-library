@model Projeto.Models.Reserva

@{
    ViewData["Title"] = "ReservarLivro";
}

<style>
    main {
        background-color: #D9D9D9;
        width: 100%;
    }

    h1 {
        color: white;
        background-color: #5B9898;
        padding: 25px;
    }

    .botoes-cria-edita {
        display: flex;
        justify-content: end;
        margin-right: 10px;
    }

        .botoes-cria-edita a {
            display: block;
            width: 140px;
            height: 40px;
            line-height: 40px;
            margin: 10px;
            background-color: #3C7373;
            color: #FFFFFF;
            border-radius: 10px;
            text-decoration: none;
            text-align: center;
            font-family: Arial;
            font-size: 14px;
        }

    .filtro-minha-biblioteca {
        width: 100%;
        height: 100px;
        background-color: #C8C8C8;
    }

    .cor-linha {
        background-color: #979797;
        color: white;
    }

    .agrupador-botao-minha-lib {
        display: flex;
        margin-right: -19px;
    }

        .agrupador-botao-minha-lib a {
            display: block;
            width: 140px;
            height: 40px;
            line-height: 40px;
            margin: 10px;
            background-color: #BBBBBB;
            color: #000000;
            border-radius: 10px;
            text-decoration: none;
            text-align: center;
            font-family: Arial;
            font-size: 14px;
        }

    .linha-livro {
        background: darkgray;
    }

    .livro-infos {
        width: 100%;
    }

        .livro-infos .livro-nome {
            text-transform: capitalize;
            text-transform: capitalize;
            font-size: 30px;
            font-weight: 600;
            color: white;
        }

        .livro-infos .livro-isbn {
        }

        .livro-infos .livro-autor {
            text-transform: capitalize;
        }

        .livro-infos .livro-biblioteca-nome {
            text-transform: capitalize;
        }

    .livro-acao {
        vertical-align: middle;
    }

    .livro-subtexto {
        font-weight: 600;
    }

    .btn-reservar {
        text-decoration: none;
    }

        .btn-reservar div {
            display: flex;
            width: 100px;
            height: 40px;
            align-items: center;
            justify-content: center;
            background-color: #3b3a3a;
            color: white;
            border-radius: 80px;
            border: none;
        }

            .btn-reservar div:hover {
                opacity: 0.75;
            }
</style>

<h1>ReservarLivro</h1>

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReservarLivro">
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Livros" asp-action="LivrosOutrosUsuarios">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
