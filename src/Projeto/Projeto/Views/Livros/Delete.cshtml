        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Emprestar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emprestar)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="LivrosDoUsuario">Voltar</a>
    </form>
</div>
